<div class="home-slider2">
    <div class="logo-bottom-rev"><img src="assets/logo-bottom-rev.png" /></div>
    
</div>
<div class="tri-box-teaser">
<center>
  <% if @order.size.zero? %>
  <p>Lest borrow book!</p>
  <% else %>
  
    <table border="1" style="">
    <tr>
        <th>Book
        </th>
        <th>Number
        </th>
        <th>From Date
        </th>
        <th>To Date
        </th>      
        <th>Delete
        </th>
      </tr>
     
    <% @order.each_with_index do |order, index| %>
      <tr>
        <td valign="middle">
        <center>
        <image width="60px" height="80px" src="<%= Book.get_book_by_id( order["book_id"].to_i).picture %>" />
        </center>
        </td>
        <td>
        <%= order["number_borrow"] %>
        </td>
        <td>
        <%= order["from_date"] %>
        </td>
        <td>
        <%= order["to_date"] %>
        </td>
        <td>
        <%= button_to "Delete", cart_path(id: index), method: :delete %>
        </td>
      </tr>
      <% end %>      
  </table>

    <%= button_to "Borrow Book", borrows_path, method: :post, :remote => true %>
    <div id="cart"></div>
  
  <% end%>
  </center>
</div>