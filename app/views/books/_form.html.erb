<%= form_for(book) do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(book.errors.count, I18n.t("error")) %>
      </h2>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :category_id %>
    <%= f.text_field :category_id %>
  </div>

    <%= f.fields_for :ralation_book_authors do |field| %>
        <%= field.label :author_id %>
        <%= field.text_field :author_id %>
    <% end %>

  <div class="field">
    <%= f.label :number_of_page %>
    <%= f.text_field :number_of_page %>
  </div>
  <div class="field">
    <%= f.label :publisher_id %>
    <%= f.text_field :publisher_id %>
  </div>
  <div class="field">
    <%= f.label :total_book %>
    <%= f.text_field :total_book %>
  </div>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_area :title %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.label :picture, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.file_field :picture %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
