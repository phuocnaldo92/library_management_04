<div class="home-slider-book">
  <div class="logo-bottom-rev"><%= image_tag "logo-bottom-rev.png" %></div>
</div>
<center>
<h1>Authors</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= image_tag author.picture, class: "image-detail" %></td>
        <td><%= link_to 'Show', author %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Author', new_author_path %>
</center>

